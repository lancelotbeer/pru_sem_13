<div class= "container row">
  <div class= "col-md-6">
    <h1> no completados</h1>

    <% @todos.each do |t| %>
    <% if t.completed == false %>
    <div class = "well">
      <div class= "col-md-6">
        <br></br>
      <%= t.description %>

      <%= t.completed %>

      </div>
      <div class="btn-group btn-group-sm" role="group" aria-label="...">
      <button type="button" class="btn btn-outline-primary">
      <%= link_to 'show', t %>
      </button>
      <button type="button" class="btn btn-outline-secondary">
      <%= link_to 'edit', edit_path(t) %>
      </button>
      <button type="button" class="btn btn-outline-success">
      <%= link_to 'destroy', destroy_path(t),method: :delete %>
      </button>
      <button type="button" class="btn btn-outline-danger">
      <%= link_to 'complete', complete_path(t) %>
      </button>
      </div>
    </div>
      <% end %>
    <% end %>

  </div>
  <div class= "col-md-6">
    <h1>completados</h1>

    <% @todos.each do |t| %>
    <% if t.completed %>
    <div class = "well">
      <div class= "col-md-6">
        <br></br>
      <%= t.description %>

      <%= t.completed %>

      </div>
      <div class="btn-group btn-group-sm" role="group" aria-label="...">
      <button type="button" class="btn btn-outline-primary">
      <%= link_to 'show', t %>
      </button>
      <button type="button" class="btn btn-outline-secondary">
      <%= link_to 'edit', edit_path(t) %>
      </button>
      <button type="button" class="btn btn-outline-success">
      <%= link_to 'destroy', destroy_path(t),method: :delete %>
      </button>
      <button type="button" class="btn btn-outline-danger">
      <%= link_to 'complete', complete_path(t) %>
      </button>
    </div>

    </div>
      <%end%>
    <% end %>

  </div>
</div>
